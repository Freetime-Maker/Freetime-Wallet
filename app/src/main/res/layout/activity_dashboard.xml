<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F4F6F8">

    <TextView
        android:id="@+id/txtDashboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to your Freetime Wallet Dashboard"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#222"
        android:layout_marginBottom="16dp" />

    <Spinner
        android:id="@+id/coinSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/coin_array" />

    <TextView
        android:id="@+id/addressDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address will appear here"
        android:textSize="16sp"
        android:textColor="#444"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:background="#E0E0E0" />
</LinearLayout>
